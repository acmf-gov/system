{
  "name": "Barca Coletiva",
  "description": "Sistema de compras coletivas de produtos can√°bicos",
  "domain": "seu-dominio.com",
  "node_version": "20",
  "build_command": "npm run build",
  "start_command": "npm start",
  "working_directory": "/var/www/barca-coletiva",
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "DATABASE_URL": "postgresql://barca_user:sua_senha_aqui@localhost:5432/barca_coletiva",
    "NEXTAUTH_SECRET": "sua_chave_secreta_aqui",
    "NEXTAUTH_URL": "https://seu-dominio.com",
    "JWT_SECRET": "sua_chave_jwt_aqui",
    "ENCRYPTION_KEY": "sua_chave_32_bytes_aqui",
    "SOCKET_IO_CORS_ORIGIN": "https://seu-dominio.com",
    "ZAI_API_KEY": "sua_chave_z_ai_aqui"
  },
  "ports": ["3000"],
  "volumes": ["/var/www/barca-coletiva"],
  "databases": {
    "type": "postgresql",
    "name": "barca_coletiva",
    "user": "barca_user",
    "password": "sua_senha_aqui",
    "host": "localhost",
    "port": "5432"
  },
  "features": {
    "ssl": true,
    "redis": false,
    "websocket": true,
    "realtime": true
  },
  "requirements": {
    "cpu": "1",
    "memory": "1024",
    "disk": "5120"
  },
  "health_check": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}